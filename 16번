
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner input = new Scanner(System.in);
		int N;
		N = input.nextInt();
		String blank =  "";
	
		while (N > 0) {
			blank = (N % 2) + blank;
			N /= 2;
			
		}
		System.out.println(blank);
		

		
	 
			 
	 	 
		
		
	
		
		
		
	
		
		
		
			
		}
		
		
	   }
	
